<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/chess.png" type="image/x-icon">
    <title>Home</title>
</head>
<body>
    <div id="loader" class="loader-container flex items-center justify-center">
        <div class="loader"></div>
    </div>
    <div id="game-container" class="hidden">
        <div class="flex items-center justify-center min-h-screen bg-gray-800 text-white">
            <div class="text-center">
                <h1 class="border-y-4 border-indigo-500 text-4xl mt-10 mb-10 font-extrabold text-gray-100 tracking-wider shadow-lg bg-gradient-to-r from-purple-500 via-indigo-600 to-blue-500 text-transparent bg-clip-text">
                    CHESS GAME
                </h1>
                
                <img class="h-auto max-w-xs mx-auto" src="/images/pngegg.png" alt="image description">
                <!-- Custom dropdown with SVG icons -->
                <form action="/index" method="get" class="mt-8">
                    <label for="depth" class="block mb-2 text-lg font-medium text-gray-300">Select Difficulty:</label>
                    <div class="relative">
                        <div class="relative inline-block w-full text-lg">
                            <select id="depth" name="depth"
                                class="block w-full bg-gray-800 text-lg text-white border border-gray-600 rounded-lg p-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-300 ease-in-out hover:bg-gray-700">
                                <option value="3" class="text-green-400">Easy</option>
                                <option value="5" class="text-yellow-400">Medium</option>
                                <option value="10" class="text-orange-400" selected>Hard</option>
                                <option value="15" class="text-red-500">Very Hard</option>
                                <option value="20" class="text-purple-700">Extreme</option>
                            </select>
                        </div>
                    </div>
    
                    <button type="submit"
                        class="btn2 relative inline-flex items-center justify-center p-0.5 mb-2 mt-8 me-2 overflow-hidden text-lg font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 transition-all duration-300 ease-in-out">
                        <span
                            class="relative px-8 py-3 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                            Start Game
                        </span>
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            const gameContainer = document.getElementById('game-container');
            loader.style.display = 'none'; // Hide the loader
            gameContainer.classList.remove('hidden'); // Show the game container
        });
    </script>
</body>
</html>
